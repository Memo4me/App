@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<div class="top-row px-4 d-flex justify-content-between align-items-center bg-dark text-white">
    <div class="app-title">
        <h1>Memo4me</h1>
    </div>
    
    <AuthorizeView>
        <Authorized>
            <NavLink href="/logout" class="nav-link btn btn-link">
                Logout
                <span class="me-2"><i class="bi bi-box-arrow-right"></i></span>
            </NavLink>
        </Authorized>
        <NotAuthorized>
            <NavLink href="/login?redirectUri=/" class="nav-link btn btn-link">
                Login
                <span class="me-2"><i class="bi bi-box-arrow-in-right"></i></span>
            </NavLink>
        </NotAuthorized>
    </AuthorizeView>
</div>

<div class="main">
    @Body
</div>
