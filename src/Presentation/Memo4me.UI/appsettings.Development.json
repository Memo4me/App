{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Authentication": {
    "OpenIdConnect": {
      "Authority": "${OIDC_AUTHORITY}",
      "MetadataAddress": "${OIDC_METADATA_ADDRESS}",
      "ClientSecret": "${OIDC_CLIENT_SECRET}",
      "ClientId": "public-client",
      "ResponseType": "code",
      "RequireHttpsMetadata": false
    }
  }
}
